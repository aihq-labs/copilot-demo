# Microsoft Copilot Agent SDK Environment Variables
# Copy this file to .env and fill in your values
# This is the PRIMARY configuration file - config.yaml is optional

# ============================================================
# REQUIRED: Agent Configuration
# ============================================================
# Get these from your Copilot Studio agent settings
COPILOT_STUDIO_AGENT_ENVIRONMENT_ID=
COPILOT_STUDIO_AGENT_TENANT_ID=
COPILOT_STUDIO_AGENT_APP_ID=
COPILOT_STUDIO_AGENT_AGENT_IDENTIFIER=

# ============================================================
# Authentication Configuration
# ============================================================
# Auth mode: "none", "interactive", "client_credentials", or "directline"
# Use "none" if your agent has "No Auth" security in Copilot Studio
COPILOT_STUDIO_AGENT_AUTH_MODE=interactive

# Azure AD Application Client ID
# Required ONLY if auth mode is NOT "none"
# Get this from your Azure AD App Registration
COPILOT_STUDIO_AGENT_APP_CLIENT_ID=

# Azure credentials for client_credentials auth mode
AZURE_TENANT_ID=
AZURE_CLIENT_SECRET=

# DirectLine secret (for directline auth mode)
COPILOT_STUDIO_WEB_CHANNEL_SECURITY_KEY=

# ============================================================
# Optional: Agent Display Settings
# ============================================================
COPILOT_STUDIO_AGENT_NAME=Copilot Agent
COPILOT_STUDIO_AGENT_INSTRUCTIONS=You are a helpful AI assistant powered by Microsoft Copilot.

# ============================================================
# Optional: API Configuration
# ============================================================
COPILOT_STUDIO_API_BASE_URL=https://api.copilotstudio.microsoft.com
COPILOT_STUDIO_API_TIMEOUT=30
COPILOT_STUDIO_API_MAX_RETRIES=3
POWER_PLATFORM_CLOUD=PROD
